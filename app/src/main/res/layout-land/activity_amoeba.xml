<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmoebaActivity">

    <LinearLayout
        android:id="@+id/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/StateLabel"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="@string/state"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="italic"
            tools:textSize="16sp"
            tools:textStyle="normal|italic" />

        <TextView

            android:id="@+id/State"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/neutral"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="italic"
            tools:textSize="24sp"
            tools:textStyle="normal|italic" />

        android:editable="false"
        android:freezesText="false"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        />


        <LinearLayout
            android:id="@+id/ProgressBarLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressSatiety"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="25"
                android:scaleY="4" />

            <ProgressBar
                android:id="@+id/progressEnergies"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="45"
                android:scaleY="4" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/BottomLayout"
        android:id="@+id/TopLayout"
        android:layout_margin="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ButtonsLayout">

            <ImageView
                android:id="@+id/buttonFood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/food"
                android:onClick="onClickSetFood"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/buttonDanger"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/danger"
                android:onClick="onClickSetDanger"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>

        <view
            android:id="@+id/view"
            class="com.izyasosha.amoeba.GameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light" />
    </LinearLayout>
</RelativeLayout>