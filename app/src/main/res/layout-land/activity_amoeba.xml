<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmoebaActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:id="@+id/BottomLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/StateLabel"
            android:text="State"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@android:color/darker_gray"
            tools:textSize="24sp"
            tools:textStyle="normal|italic" />

        <EditText

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/State"
            android:layout_weight="1"
            android:editable="false"
            android:freezesText="false"
            android:singleLine="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ProgressBarLayout"
            android:layout_weight="1">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressSatiety"
                android:progress="25"
                android:indeterminateDrawable="@color/colorAccent"
                android:progressTint="@android:color/holo_orange_light"
                android:tag="mvbmv"
                android:indeterminate="false"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressEnergies"
                android:progress="45"
                android:progressTint="@android:color/holo_blue_dark" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/BottomLayout"
        android:id="@+id/TopLayout"
        android:layout_margin="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ButtonsLayout">

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFood"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="food"
                android:textAlignment="gravity" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDanger"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="danger" />
        </LinearLayout>

        <view android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.izyasosha.amoeba.GameView" android:id="@+id/view" />
    </LinearLayout>
</RelativeLayout>